doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title #{title}
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/cover.css', rel='stylesheet')
    script(src='js/colenso.js')
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')

    script(language='javascript', type='text/javascript').
      var file_name = document.URL;
      openDownload = function() {
      location.href = file_name.replace('view','download');
      }
  body
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix(style='position: relative;')
            .inner
              h3.masthead-brand #{title}
              nav
                ul.nav.masthead-nav
                  li
                    a(href='#', onclick='goHome();') Home                  
                  li
                    a(href='#', onclick='addLetter();') Add
                  li
                    a(href='#', onclick='searchLetter();') Search
          
          #private-letter-browse.container-fluid
            h3  #{category}
            p| !{content}
           
          a(href='javascript:openDownload()' class='btn btn-primary') Download
          &nbsp;
          a(href="#edit" class="btn btn-primary") Edit
          .mastfoot(style='position: relative;')
            .inner
              p
                a(href='http://www.williamcolenso.co.nz/') #{title}
                |  by 
                a(href='https://twitter.com/kszndra')  semillkasz
                | .
    //
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="js/vendor/jquery.min.js"><\\/script>')
    script(src='js/bootstrap.min.js')

