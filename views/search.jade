    //if lt IE 9
    //  script(src='../../assets/js/ie8-responsive-file-warning.js')
    //script(src='js/ie-emulation-modes-warning.js')
    script(src='js/colenso.js')
    script(src='http://code.jquery.com/jquery-latest.js')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    .site-wrapper
      .site-wrapper-inner
        .cover-container
          .masthead.clearfix(style='position: relative;')
            .inner
              h3.masthead-brand= title
              nav
                ul.nav.masthead-nav
                  li
                    a(href='#', onclick='goHome();') Home
                  
                  li
                    a(href='#', onclick='addLetter();') Add
                  li.active
                    a(href='#', onclick='searchLetter();') Search
          .container-fluid
            .form-group
              h4.col-sm-1.control-label
                span.glyphicon.glyphicon-search
              .col-sm-11
                form(action="/search", method="get")
                  input.form-control(type='text', name="searchString", method="get", autocomplete="off")
          p#output
          | !{output}
          .mastfoot(style='position: relative;')
            .inner
              p
                a(href='http://www.williamcolenso.co.nz/')= title 
                |  by 
                a(href='https://twitter.com/kszndra')  semillkasz
                | .
